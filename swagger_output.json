  "definitions": {
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "lewishamilton@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "User": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "displayName": {
            "type": "string",
            "example": "Lewis Hamilton"
          },
          "email": {
            "type": "string",
            "example": "lewishamilton@gmail.com"
          },
          "image": {
            "type": "string",
